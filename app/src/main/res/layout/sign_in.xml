<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:layout_gravity="center">





        <TextView
            android:id="@+id/id_signIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@color/color_app"
            android:fontFamily="@font/arefruqaabold"
            android:text="Sign in"
            android:textAlignment="textEnd"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="50px"
            android:textStyle="bold"

            />



        <EditText
            android:id="@+id/id_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="EMAIL"
            android:textColorHint="@color/color_font"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"

            />


        <EditText
            android:id="@+id/id_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="PASSWORD"
            android:inputType="textPassword"

            android:textColorHint="@color/color_font" />

    <Button
        android:id="@+id/id_btnLogIn"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonlogin"
        android:fontFamily="@font/arefruqaabold"
        android:shadowColor="#595353"
        android:text="SIGN IN"
        android:textColor="#FFF"
        android:textSize="35px"
        app:backgroundTint="#40ACAC" />

    <TextView
        android:id="@+id/id_empty"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="242dp"
        android:background="@color/color_bottom"
        android:fontFamily="@font/arefruqaabold"
        android:paddingTop="15dp"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="50px"
        android:textStyle="bold" />




</LinearLayout>